<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/MyTopButton"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp" >

    <TextView
        android:id="@+id/file_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="Please select files"
        android:textColor="#0099CC"
        android:textSize="32sp" />

    <ListView
        android:id="@+id/FileList"
        android:layout_width="wrap_content"
        android:layout_height="342dp"
        android:layout_weight="1.22"
        android:cacheColorHint="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/SelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSelectAllClick"
            android:text="SelectAll" />

        <Button
            android:id="@+id/DeselectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:onClick="onDeselectAllClick"
            android:text="DeselectAll" />

        

    </LinearLayout>

    <Button
        android:id="@+id/submitAttac"
        android:layout_width="fill_parent"
        android:layout_height="19dp"
        android:layout_weight="0.81"
        android:background="@drawable/blue_button"
        android:onClick="onSubmitAttachClick"
        android:text="Attach"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</LinearLayout>
